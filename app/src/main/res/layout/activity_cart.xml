<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CartActivity">

    <RelativeLayout
        android:id="@+id/r111"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/red"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/page_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Price = "
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/msg1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="50dp"
        android:text="Congratulations, your final order has been placed successfully. Please Pay Via Online Banking to make an Payment again. "
        android:textSize="20dp"
        android:visibility="gone"
        />


    <TextView
        android:id="@+id/choose_bank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:text="Choose bank for payment"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold"
        android:visibility="gone"
        />



    <LinearLayout
        android:id="@+id/linear10_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >

        <ImageView
            android:id="@+id/land_bank"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/landbank"
            android:visibility="gone"


            />

        <ImageView
            android:id="@+id/BDO"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/bdo"
            android:visibility="gone"

            />


        <ImageView
            android:id="@+id/g_cash"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/gcash"
            android:visibility="gone"

            />

        <ImageView
            android:id="@+id/BPI"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/bpi"
            android:visibility="gone"

            />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/linear11_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear10_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp"
        >

        <ImageView
            android:id="@+id/china_bank"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/chinabank"
            android:visibility="gone"

            />

        <ImageView
            android:id="@+id/RCBC"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/rcbc"
            android:visibility="gone"

            />
    </LinearLayout>


    <TextView
        android:id="@+id/txt_Information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textAlignment="center"
        android:layout_above="@+id/txt_Phone_Number"
        android:layout_centerVertical="true"
        android:text="Contact the admin to get Account number"
        android:textSize="20dp"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/text_View_Link_Gmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="50dp"
        android:text="@string/messageWithLink"
        android:textSize="20dp"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/txt_Phone_Number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textAlignment="center"
        android:layout_above="@+id/text_View_Link_Gmail"
        android:layout_centerVertical="true"
        android:text="Phone no.: 09651623684"
        android:textSize="20dp"
        android:visibility="gone"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cart_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/next_process_btn"
        android:layout_below="@+id/r111"
        >

    </androidx.recyclerview.widget.RecyclerView>

    <Button
        android:id="@+id/next_process_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/red"
        android:text="Next"
        android:textAllCaps="false"
        android:textColor="@android:color/white"

        />
</RelativeLayout>